{
  "name": "listings-service",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/listings-service/src",
  "projectType": "application",
  "targets": {
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm --filter @new-building-portal/listings-service serve",
        "cwd": "{projectRoot}"
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm --filter @new-building-portal/listings-service build",
        "cwd": "{projectRoot}"
      },
      "outputs": ["{projectRoot}/dist"]
    },
    "migration:generate": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsx src/migration-cli/generate.ts --name {args.name}",
        "cwd": "{projectRoot}"
      }
    },
    "migration:run": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsx src/migration-cli/run.ts",
        "cwd": "{projectRoot}"
      }
    },
    "migration:revert": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsx src/migration-cli/revert.ts",
        "cwd": "{projectRoot}"
      }
    },
    "migration:diagnose": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsx src/migration-cli/diagnose.ts",
        "cwd": "{projectRoot}"
      }
    },
    "migrate": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsx src/migration-cli/run.ts",
        "cwd": "{projectRoot}"
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm --filter @new-building-portal/listings-service test",
        "cwd": "{projectRoot}"
      },
      "dependsOn": ["openapi:generate"]
    },
    "openapi:generate": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsx scripts/generate-openapi.ts",
        "cwd": "{projectRoot}"
      }
    },
    "openapi:validate": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsx scripts/validate-openapi.ts",
        "cwd": "{projectRoot}"
      },
      "dependsOn": ["openapi:generate"]
    }
  },
  "tags": []
}

