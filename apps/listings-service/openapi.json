              "type": "number"
            }
          },
          {
            "name": "floors_max",
            "required": false,
            "in": "query",
            "description": "Maximum number of floors",
            "schema": {
              "type": "number"
            }
          },
          {
            "name": "developer_id",
            "required": false,
            "in": "query",
            "description": "Developer ID (UUID)",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "region_id",
            "required": false,
            "in": "query",
            "description": "Region ID (UUID)",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "commissioning_date_from",
            "required": false,
            "in": "query",
            "description": "Commissioning date from (ISO 8601 date string)",
