  "info": {
    "title": "Listings Service API",
    "description": "API for managing building listings",
    "version": "1.0",
    "contact": {}
  },
  "tags": [
    {
      "name": "buildings",
      "description": ""
    },
    {
      "name": "admin-buildings",
      "description": ""
    }
  ],
  "servers": [],
  "components": {
    "schemas": {
      "BuildingResponseDto": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "Building ID (UUID)"
          },
          "title": {
            "type": "object",
            "description": "Building title in multiple languages"
          },
          "description": {
            "type": "object",
            "description": "Building description in multiple languages",
            "nullable": true
          },
          "address": {
            "type": "object",
            "description": "Building address in multiple languages"
          },
          "location": {
            "type": "object",
            "description": "Geographic location",
            "example": {
              "lat": 40.1811,
              "lng": 44.5144
            }
          },
          "addressLine1": {
            "type": "string",
            "description": "Address line 1",
            "nullable": true
          },
          "addressLine2": {
            "type": "string",
            "description": "Address line 2",
            "nullable": true
          },
          "city": {
            "type": "string",
            "description": "City"
          },
          "postalCode": {
            "type": "string",
            "description": "Postal code",
            "nullable": true
          },
          "floors": {
            "type": "number",
            "description": "Number of floors"
          },
          "totalUnits": {
            "type": "number",
            "description": "Total units",
            "nullable": true
          },
          "commissioningDate": {
            "type": "object",
            "description": "Commissioning date",
            "nullable": true
          },
          "constructionStatus": {
            "type": "string",
            "description": "Construction status",
            "enum": [
              "planned",
              "under_construction",
              "completed"
            ],
            "nullable": true
          },
          "pricePerM2Min": {
            "type": "number",
            "description": "Minimum price per m²",
            "nullable": true
          },
          "pricePerM2Max": {
            "type": "number",
            "description": "Maximum price per m²",
            "nullable": true
          },
          "areaMin": {
            "type": "number",
            "description": "Minimum area (m²)"
          },
          "areaMax": {
            "type": "number",
            "description": "Maximum area (m²)"
          },
          "currency": {
            "type": "string",
            "description": "Currency code"
          },
          "developerId": {
            "type": "string",
            "description": "Developer ID (UUID)"
          },
          "regionId": {
            "type": "string",
            "description": "Region ID (UUID)"
          },
          "status": {
            "type": "string",
            "description": "Status",
            "enum": [
              "draft",
              "published",
              "archived"
            ]
          },
          "isFeatured": {
            "type": "boolean",
            "description": "Is featured",
            "nullable": true
          },
          "developerWebsiteUrl": {
            "type": "string",
            "description": "Developer website URL",
            "nullable": true
          },
          "developerFacebookUrl": {
            "type": "string",
            "description": "Developer Facebook URL",
            "nullable": true
          },
          "developerInstagramUrl": {
            "type": "string",
            "description": "Developer Instagram URL",
            "nullable": true
          },
          "createdAt": {
            "type": "string",
            "description": "Created at timestamp"
          },
          "updatedAt": {
            "type": "string",
            "description": "Updated at timestamp"
          },
          "publishedAt": {
            "type": "string",
            "description": "Published at timestamp",
            "nullable": true
          },
          "createdBy": {
            "type": "string",
            "description": "Created by user ID (UUID)",
            "nullable": true
          }
        },
        "required": [
          "id",
          "title",
          "address",
          "location",
          "city",
          "floors",
          "areaMin",
          "areaMax",
          "currency",
          "developerId",
          "regionId",
          "status",
          "createdAt",
          "updatedAt"
        ]
      },
      "PaginationMetaDto": {
        "type": "object",
        "properties": {
          "page": {
            "type": "number",
            "description": "Current page number (1-based)"
          },
          "limit": {
            "type": "number",
            "description": "Items per page"
          },
          "total": {
            "type": "number",
            "description": "Total number of items"
          },
          "totalPages": {
            "type": "number",
            "description": "Total number of pages"
          },
          "hasNext": {
            "type": "boolean",
            "description": "Whether there is a next page"
          },
          "hasPrev": {
            "type": "boolean",
            "description": "Whether there is a previous page"
          }
        },
        "required": [
          "page",
          "limit",
          "total",
          "totalPages",
          "hasNext",
          "hasPrev"
        ]
      },
      "ResponseMetaDto": {
        "type": "object",
        "properties": {
          "currency": {
            "type": "string",
            "description": "Currency used for prices",
            "enum": [
              "AMD",
              "USD"
            ],
            "example": "AMD"
          },
          "exchangeRate": {
            "type": "number",
            "description": "Exchange rate used for currency conversion",
            "example": 1
          },
          "sort": {
            "type": "string",
            "description": "Sort option used",
            "example": "date_desc"
          }
        },
        "required": [
          "currency",
          "exchangeRate",
          "sort"
        ]
      },
      "PaginatedBuildingsResponseDto": {
        "type": "object",
        "properties": {
          "data": {
            "description": "List of buildings",
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/BuildingResponseDto"
            }
          },
          "pagination": {
            "description": "Pagination metadata",
            "allOf": [
              {
                "$ref": "#/components/schemas/PaginationMetaDto"
              }
            ]
          },
          "meta": {
            "description": "Response metadata",
            "allOf": [
              {
                "$ref": "#/components/schemas/ResponseMetaDto"
              }
            ]
          }
        },
        "required": [
          "data",
          "pagination",
          "meta"
        ]
      },
      "BuildingEnvelopeDto": {
        "type": "object",
        "properties": {
          "data": {
            "description": "Building data",
            "allOf": [
              {
                "$ref": "#/components/schemas/BuildingResponseDto"
              }
            ]
          }
        },
        "required": [
          "data"
        ]
      },
      "LocationDto": {
        "type": "object",
        "properties": {
          "lat": {
            "type": "number",
            "description": "Latitude",
            "example": 40.1811
          },
          "lng": {
            "type": "number",
            "description": "Longitude",
            "example": 44.5091
          }
        },
        "required": [
          "lat",
          "lng"
        ]
      },
      "CreateBuildingDto": {
        "type": "object",
        "properties": {
          "title": {
            "type": "object",
            "description": "Building title in multiple languages",
