      },
      "post": {
        "operationId": "BuildingsAdminController_create",
        "summary": "Create a new building (admin only)",
        "parameters": [
          {
            "name": "x-admin-key",
            "in": "header",
            "description": "Admin API key",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateBuildingDto"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Building created successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/BuildingEnvelopeDto"
                }
              }
            }
          }
        },
        "tags": [
          "admin-buildings"
        ]
      }
    },
    "/v1/admin/buildings/{id}": {
      "put": {
        "operationId": "BuildingsAdminController_update",
        "summary": "Update a building (admin only)",
        "parameters": [
          {
            "name": "x-admin-key",
            "in": "header",
            "description": "Admin API key",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "id",
            "required": true,
            "in": "path",
            "description": "Building ID (UUID)",
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UpdateBuildingDto"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Building updated successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/BuildingEnvelopeDto"
                }
              }
            }
          }
        },
        "tags": [
          "admin-buildings"
        ]
      },
      "delete": {
        "operationId": "BuildingsAdminController_remove",
        "summary": "Soft-delete a building (admin only)",
        "parameters": [
          {
            "name": "x-admin-key",
            "in": "header",
            "description": "Admin API key",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "id",
            "required": true,
            "in": "path",
            "description": "Building ID (UUID)",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Building deleted successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": {
                      "type": "object",
                      "properties": {
                        "id": {
                          "type": "string",
                          "format": "uuid"
                        },
                        "status": {
                          "type": "string"
                        },
                        "deletedAt": {
                          "type": "string",
                          "format": "date-time"
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        },
        "tags": [
          "admin-buildings"
        ]
      }
    },
    "/v1/admin/buildings/{id}/publish": {
      "post": {
        "operationId": "BuildingsAdminController_publish",
        "summary": "Publish or unpublish a building (admin only)",
