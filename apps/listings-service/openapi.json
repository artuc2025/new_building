          },
          "description": {
            "type": "object",
            "description": "Building description in multiple languages",
            "example": {
              "am": "Նկարագրություն",
              "ru": "Описание",
              "en": "Description"
            }
          },
          "address": {
            "type": "object",
            "description": "Building address in multiple languages",
            "example": {
              "am": "Հասցե",
              "ru": "Адрес",
              "en": "Address"
            }
          },
          "location": {
            "description": "Geographic location (longitude, latitude)",
            "allOf": [
              {
                "$ref": "#/components/schemas/LocationDto"
              }
            ]
          },
          "addressLine1": {
            "type": "string",
            "description": "Address line 1"
          },
          "addressLine2": {
            "type": "string",
            "description": "Address line 2"
          },
          "city": {
            "type": "string",
            "description": "City",
            "example": "Yerevan",
            "default": "Yerevan"
          },
          "postalCode": {
            "type": "string",
            "description": "Postal code"
          },
          "floors": {
            "type": "number",
            "description": "Number of floors",
            "example": 10
          },
          "totalUnits": {
            "type": "number",
            "description": "Total units"
          },
          "commissioningDate": {
            "type": "string",
            "description": "Commissioning date (ISO date string)"
          },
          "constructionStatus": {
            "type": "string",
            "description": "Construction status",
            "enum": [
              "planned",
              "under_construction",
              "completed"
            ]
          },
          "pricePerM2Min": {
            "type": "number",
            "description": "Minimum price per m²"
          },
          "pricePerM2Max": {
            "type": "number",
            "description": "Maximum price per m²"
          },
          "areaMin": {
            "type": "number",
            "description": "Minimum area (m²)",
            "example": 45
          },
          "areaMax": {
            "type": "number",
            "description": "Maximum area (m²)",
