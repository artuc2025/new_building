          {
            "name": "x-admin-key",
            "in": "header",
            "description": "Admin API key",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "id",
            "required": true,
            "in": "path",
            "description": "Building ID (UUID)",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Building status updated successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/BuildingEnvelopeDto"
                }
              }
            }
          }
        },
        "tags": [
          "admin-buildings"
        ]
      }
    },
