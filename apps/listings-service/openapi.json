{
  "openapi": "3.0.0",
  "paths": {
    "/v1/buildings": {
      "get": {
        "operationId": "BuildingsController_findAll",
        "summary": "Get paginated list of buildings (public)",
        "parameters": [
          {
            "name": "page",
            "required": false,
            "in": "query",
            "description": "Page number (1-based)",
            "schema": {
              "minimum": 1,
              "default": 1,
              "example": 1,
              "type": "number"
            }
          },
          {
            "name": "limit",
            "required": false,
            "in": "query",
            "description": "Items per page",
            "schema": {
              "minimum": 1,
              "maximum": 100,
              "default": 20,
              "example": 20,
              "type": "number"
            }
          },
          {
            "name": "price_min",
            "required": false,
            "in": "query",
            "description": "Minimum price per m² (in selected currency)",
            "schema": {
              "type": "number"
            }
          },
          {
            "name": "price_max",
            "required": false,
            "in": "query",
            "description": "Maximum price per m² (in selected currency)",
            "schema": {
              "type": "number"
            }
          },
          {
            "name": "area_min",
            "required": false,
            "in": "query",
            "description": "Minimum area (m²)",
            "schema": {
              "type": "number"
            }
          },
          {
            "name": "area_max",
            "required": false,
            "in": "query",
            "description": "Maximum area (m²)",
            "schema": {
              "type": "number"
            }
          },
          {
            "name": "floors_min",
            "required": false,
            "in": "query",
            "description": "Minimum number of floors",
            "schema": {
              "type": "number"
            }
          },
          {
            "name": "floors_max",
            "required": false,
            "in": "query",
            "description": "Maximum number of floors",
            "schema": {
              "type": "number"
            }
          },
          {
            "name": "developer_id",
            "required": false,
            "in": "query",
            "description": "Developer ID (UUID)",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "region_id",
            "required": false,
            "in": "query",
            "description": "Region ID (UUID)",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "commissioning_date_from",
            "required": false,
            "in": "query",
            "description": "Commissioning date from (ISO 8601 date string)",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "commissioning_date_to",
            "required": false,
            "in": "query",
            "description": "Commissioning date to (ISO 8601 date string)",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "sort",
            "required": false,
            "in": "query",
            "description": "Sort option",
            "schema": {
              "default": "date_desc",
              "enum": [
                "price_asc",
                "price_desc",
                "date_desc",
                "date_asc",
                "area_asc",
                "area_desc",
                "floors_asc",
                "floors_desc"
              ],
              "type": "string"
            }
          },
          {
            "name": "currency",
            "required": false,
            "in": "query",
            "description": "Currency for price filtering and conversion",
            "schema": {
              "default": "AMD",
              "enum": [
                "AMD",
                "USD"
              ],
              "type": "string"
            }
          },
          {
            "name": "status",
            "required": false,
            "in": "query",
            "description": "Status filter (public endpoints only expose published buildings). Defaults to \"published\".",
            "schema": {
              "default": "published",
              "enum": [
                "published"
              ],
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "List of buildings retrieved successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/PaginatedBuildingsResponseDto"
                }
              }
            }
          },
          "400": {
            "description": "Invalid query parameters"
          }
        },
        "tags": [
          "buildings"
        ]
      }
    },
    "/v1/buildings/{id}": {
      "get": {
        "operationId": "BuildingsController_findOne",
        "summary": "Get building by ID (public)",
        "parameters": [
          {
            "name": "id",
            "required": true,
            "in": "path",
            "description": "Building ID (UUID)",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "currency",
            "required": false,
            "in": "query",
            "description": "Currency for price conversion",
            "schema": {
              "enum": [
                "AMD",
                "USD"
              ],
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Building retrieved successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/BuildingEnvelopeDto"
                }
              }
            }
          },
          "400": {
            "description": "Invalid UUID format"
          },
          "404": {
            "description": "Building not found"
          }
        },
        "tags": [
          "buildings"
        ]
      }
    },
