          {
            "name": "area_min",
            "required": false,
            "in": "query",
            "description": "Minimum area (m²)",
            "schema": {
              "type": "number"
            }
          },
          {
            "name": "area_max",
            "required": false,
            "in": "query",
            "description": "Maximum area (m²)",
