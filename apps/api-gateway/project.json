{
  "name": "api-gateway",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/api-gateway/src",
  "projectType": "application",
  "targets": {
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm --filter @new-building-portal/api-gateway serve",
        "cwd": "{projectRoot}"
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm --filter @new-building-portal/api-gateway build",
        "cwd": "{projectRoot}"
      },
      "outputs": ["{projectRoot}/dist"]
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm --filter @new-building-portal/api-gateway test",
        "cwd": "{projectRoot}"
      },
      "dependsOn": ["openapi:generate"]
    },
    "openapi:generate": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx ts-node --transpile-only -r tsconfig-paths/register scripts/generate-openapi.ts",
        "cwd": "{projectRoot}"
      }
    },
    "openapi:validate": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx ts-node --transpile-only -r tsconfig-paths/register scripts/validate-openapi.ts",
        "cwd": "{projectRoot}"
      },
      "dependsOn": ["openapi:generate"]
    }
  },
  "tags": []
}

